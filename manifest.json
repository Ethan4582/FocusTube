{
  "manifest_version": 3,
  "name": " YouTube manager",
  "version": "1.0",
  "description": "A focus-mode YouTube manager that hides shorts, recommendations, comments, and more  ",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["popup.js"],
      "css": ["style.css"]
    }
  ]
}